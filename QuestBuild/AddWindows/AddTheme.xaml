<Window x:Class="QuestBuild.AddWindows.AddTheme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddTheme" Height="200" Width="413">
    <Grid>
        <Label Content="Тема:" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="TextBox_Theme" HorizontalAlignment="Left" Height="37" Margin="10,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="266"/>
        <Button x:Name="Button_SaveTheme" Content="Добавить" HorizontalAlignment="Left" Margin="281,108,0,0" VerticalAlignment="Top" Width="114" Height="37" Click="Button_SaveTheme_Click"/>
        <Label Content="Корневая тема (необязательно):" HorizontalAlignment="Left" Margin="195,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,-0.115" Width="197"/>
        <ComboBox x:Name="Cb_KornTheme" HorizontalAlignment="Left" Margin="195,41,0,0" VerticalAlignment="Top" Width="200" Height="31" DropDownClosed="Cb_KornTheme_DropDownClosed"/>
        <Label Content="Предмет:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="180"/>
        <ComboBox x:Name="Cb_SubjectForAddTheme" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="180" Height="31" DropDownClosed="Cb_SubjectForAddTheme_DropDownClosed"/>

    </Grid>
</Window>
